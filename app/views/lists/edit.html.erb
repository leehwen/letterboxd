<div class="main-container">
  <div class="main-content">
    <div class="new-list-header">
     <h3>
      Edit list
     </h3>
    </div>

    <div class="new-list-form">
      <%= simple_form_for(@list) do |f| %>
        <%= f.hidden_field :film_library_id, value: @film_library_id if @film_library_id.present? %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.submit "Next", class: "btn btn-green float-end mt-3"%>
      <% end %>
    </div>
  </div>
</div>
